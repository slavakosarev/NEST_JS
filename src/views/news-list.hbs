{{#if news}}
<div class="row">
  {{#each news}}
  <div id="post_{{this.id}}" class="col-lg-6">
    <div class="card">
      {{!-- <img src='http://localhost:3000{{this.name}}' class="card-img-top" style="height: 200px; object-fit: cover;"
        alt=''> --}}
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Создан:
          {{this.createdAt}}</h6>
        <p class="card-text">{{this.description}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h1>Постов нет!</h1>
{{/if}}